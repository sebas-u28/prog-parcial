@{
    ViewData["Title"] = "Asociar Jugador a Equipo";
    var jugadores = ViewBag.Jugadores as List<prog_parcial.Models.Player>;
    var equipos = ViewBag.Equipos as List<prog_parcial.Models.Team>;
}

<h2>Asociar Jugador a Equipo</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(e => e.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<form asp-action="AsociarJugador" method="post">
    <div class="form-group">
        <label for="jugadorId">Jugador</label>
        <select class="form-control" name="jugadorId" required>
            <option value="">Seleccione un jugador</option>
            @foreach (var jugador in jugadores)
            {
                <option value="@jugador.Id">@jugador.Nombre</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="equipoId">Equipo</label>
        <select class="form-control" name="equipoId" required>
            <option value="">Seleccione un equipo</option>
            @foreach (var equipo in equipos)
            {
                <option value="@equipo.Id">@equipo.Nombre</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Asociar</button>
</form>
